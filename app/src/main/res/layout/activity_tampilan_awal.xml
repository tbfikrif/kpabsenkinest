<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TampilanAwalActivity"
    android:background="@drawable/mainbg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@color/yellow"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:id="@+id/sistemabsensi"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sistemabsensi"
            android:layout_centerHorizontal="true"
            android:id="@+id/centerlayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kinest"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginLeft="12dp"
                android:id="@+id/kinest"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kreatif"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_below="@+id/kinest"
                android:id="@+id/kreatif"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ideata"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/kreatif"
                android:id="@+id/ideata"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@drawable/logo_kinest"
                android:layout_toRightOf="@id/kinest"
                android:id="@+id/logo"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/logo"
                android:background="@drawable/bg_button_rounded_red"
                android:text="@string/scanner"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:id="@+id/btn_scanner"
                />
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/btn_scanner"
                android:background="@drawable/bg_button_rounded_yellow"
                android:text="@string/pengaturan"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:id="@+id/btn_setting"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>